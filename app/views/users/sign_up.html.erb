<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript">
		$(document).ready(function(){
			$('ul.nav li.nav-item.signup').addClass('active');
		});
	</script>
</head>

<body>
	<div class="main-panel">
		<div class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12" style="margin-top:10em;">&emsp;</div>
					<div class="col-md-3">&emsp;</div>
					<div class="col-md-5">
						<div class="card">
							<div class="card-header">
								<div class="card-title"><i class="fa fa-lock"></i>&emsp;Sign Up</div>
							</div>
							<div class="card-body">
								<%= form_tag("/signup", method: "post") do %>
									<div class="login-page">
										<input type="text" name="name" placeholder="Username" required />
									</div>
									<div class="login-page">
								  	<input type="email" name="email" placeholder="E-mail" required/>
								  </div>
								  <div class="login-page">
								  	<input type="password" name="password" placeholder="Password" required/>
								  </div>
								  <div class="login-page">
								  	<input type="password" name="password_confirmation" placeholder="Password again" required/>
								  </div>
								  <div class="login-page">
								  	<input type="submit" value="Sign up" class="pull-right" />
								  </div>
								<% end %>
							</div>
						</div>
					</div>
					<div class="col-md-4">&emsp;</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>