<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript">
		$(document).ready(function(){
			$('ul.nav li.nav-item.emps').addClass('active');
		});
	</script>
</head>

<body>
	<div class="main-panel">
		<div class="content">
			<div class="container-fluid">
				<h4 class="page-title">Employees Details</h4>
				<div class="row">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Employees Personal Details</div>
							</div>
							<div class="card-body">
								<%= form_tag create_emp_detail_path(params[:id]) do %>
									<div class="col-md-6 pull-left">
										<div class="form-group">
											<label>Door No</label>
											<input name="door_no" class="form-control" placeholder="Door no" autofocus="on" required>
										</div>
										<div class="form-group">
											<label>Street Name</label>
											<input name="street" class="form-control caplet" placeholder="Street" required>
										</div>
										<div class="form-group">
											<label>Village / Post</label>
											<input name="post" class="form-control caplet" placeholder="Village / Hometown" required>
										</div>
										<div class="form-group">
											<label>City</label>
											<input name="city" class="form-control caplet" placeholder="City" required>
										</div>
										<div class="form-group">
											<label>Pincode</label>
											<input name="pincode" class="form-control numeric" placeholder="Pincode" required>
										</div>
										<div class="form-group">
											<label>Experience</label>
											<input name="expri" class="form-control numeric" placeholder="Experience" required>
										</div>
									</div>

									<div class="col-md-6 pull-right">
										<div class="form-group">
											<label>Educational Qualification</label>
											<select name="degree" class="form-control" required>
												<option value="0">Please Select</option>
												<% @qualies.each do |q| %>
													<option value="<%= q.id %>"><%= q.name %></option>
												<% end %>
											</select>
										</div>
										<div class="form-group">
											<label>Department</label>
											<select name="dept" class="form-control" required>
												<option value="0">Select</option>
												<%= @departs.each do |d| %>
													<option value="<%= d.id %>"><%= d.name %></option>
												<% end %>
											</select>
										</div>
										<div class="form-group">
											<label>Mobile Number</label>
											<input name="mobile" class="form-control numeric" placeholder="Mobile Number" maxlength="10" required>
										</div>
										<div class="form-group">
											<label>Date of Birth</label>
											<input type="text" name="birth" id="date" class="form-control" placeholder="dd-mm-yyyy" required>
										</div>
										<div class="form-group">
											<label>Bank Account Number</label>
											<input name="accno" class="form-control numeric" placeholder="Account Number" required>
										</div>
										<div class="form-group">
											<label>Bank IFSC Code</label>
											<input name="ifsc" class="form-control uplet" placeholder="IFSC Code" required>
										</div>
									</div>

									<div style="margin-top:1em;">&emsp;</div>
									<div class="col-md-12">
										<div class="form-group">
											<input type="submit" name="submit" value="Submit" class="btn btn-app pull-right">
										</div>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>