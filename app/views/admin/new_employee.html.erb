<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript">
		$(document).ready(function(){
			$('ul.nav li.nav-item.emps').addClass('active');
		});
	</script>
</head>

<body>
	<div class="main-panel">
		<div class="content">
			<div class="container-fluid">
				<h5 class="page-title">Employees</h5>
				<div class="row">
					<div class="col-md-3">&nbsp;</div>
					<div class="col-md-6">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Create New Employee</div>
							</div>
							<div class="card-body">
								<%= form_tag("/newemp", method: "post") do %>
									<div class="form-group">
										<input type="text" name="empid" autofocus="true" placeholder="Employee ID" class="form-control checkempid numeric" required />
									</div>
									<div class="form-group">
										<input type="text" name="name" placeholder="Name" class="form-control caplet" required />
									</div>
									<div class="form-group">
								  	<input type="email" name="email" placeholder="E-mail" class="form-control" required />
									</div>
									<div class="form-group">
								  	<input type="password" name="password" placeholder="Password" class="form-control" required />
									</div>
									<div class="form-group">
								  	<input type="password" name="password_confirmation" placeholder="Password again" class="form-control" required />
									</div>
									<div class="form-group">
										<a href="/emps" class="btn btn-default pull-left">Cancel</a>
								  	<input type="submit" value="Next" class="btn btn-app pull-right" />
									</div>
								<% end %>
							</div>
						</div>
					</div>
					<div class="col-md-3">&nbsp;</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>