<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript">
		$(document).ready(function(){
			$('ul.nav li.nav-item.cares').addClass('active');
		});
	</script>
</head>

<body>
	<div class="main-panel">
		<div class="content">
			<div class="container-fluid">
				<h5 class="page-title">Careers</h5>
				<div class="row">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header"><div class="card-title">Add New Career</div></div>
							<div class="card-body">
								<%= form_tag("/uc/#{params[:id]}", method: "post") do %>
									<div class="col-md-6">
										<div class="form-group">
											<label for="name">Name</label>
											<% if params[:edit].to_i == 1 %>
												<input type="text" name="name" class="form-control form-control-lg" value="<%= @editc.name %>" required>
											<% elsif params[:view].to_i == 1 %>
												<input type="text" name="name" class="form-control form-control-lg" value="<%= @editc.name %>" disabled>
											<% end %>
										</div>
									</div>

									<div class="col-md-12">
										<div class="form-group">
											<label for="description">Description</label>
											<% if params[:edit].to_i == 1 %>
												<textarea name="description" rows="3" class="form-control" required><%= @editc.description %></textarea>
											<% elsif params[:view].to_i == 1 %>
												<textarea name="description" rows="3" class="form-control" required disabled><%= @editc.description %></textarea>
											<% end %>
										</div>

										<div class="form-group">
											<label for="skill">Skills</label>
											<span style="color:#E25336;">&emsp;(Give each point starting with '@')</span>
											<% if params[:edit].to_i == 1 %>
												<textarea name="skill" rows="5" class="form-control" required><%= @editc.skills %></textarea>
											<% elsif params[:view].to_i == 1 %>
												<textarea name="skill" rows="5" class="form-control" required disabled><%= @editc.skills %></textarea>
											<% end %>
										</div>
									</div>

									<div class="col-md-12">
										<div class="form-group">
											<a href="/careers" class="btn btn-cancel">Cancel</a>
											<% if params[:edit].to_i == 1 %>
												<input type="submit" name="submit" value="Update" class="btn btn-app pull-right">
											<% end %>
										</div>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>