<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript">
		$(document).ready(function(){
			$('ul.nav li.nav-item.emps').addClass('active');
		});
	</script>
</head>

<body>
	<div class="main-panel">
		<div class="content">
			<div class="container-fluid">
				<h4 class="page-title">Employees Details</h4>
				<div class="row">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Employees Personal Details</div>
							</div>
							<div class="card-body">
								<%= form_tag update_emp_detail_path(params[:id]) do %>
									<div class="col-md-6 pull-left">
										<div class="form-group">
											<label>Door No</label>
											<input name="door_no" class="form-control" placeholder="Door no" value="<%= @emps.door_no %>" required>
										</div>
										<div class="form-group">
											<label>Street Name</label>
											<input name="street" class="form-control" placeholder="Street" value="<%= @emps.street %>" required>
										</div>
										<div class="form-group">
											<label>Village / Post</label>
											<input name="post" class="form-control" placeholder="Village / Hometown" value="<%= @emps.village %>" required>
										</div>
										<div class="form-group">
											<label>City</label>
											<input name="city" class="form-control" placeholder="City" value="<%= @emps.city %>" required>
										</div>
										<div class="form-group">
											<label>Pincode</label>
											<input name="pincode" class="form-control" placeholder="Pincode" value="<%= @emps.pincode %>" required>
										</div>
										<div class="form-group">
											<label>Experience</label>
											<input name="expri" class="form-control" placeholder="Experience" value="<%= @emps.experience %>" required>
										</div>
									</div>

									<div class="col-md-6 pull-right">
										<div class="form-group">
											<label>Educational Qualification</label>
											<select name="degree" class="form-control" required>
												<% @qualies.each do |q| %>
													<% if @emps.qualification == q.id %>
														<option value="<%= q.id %>" selected><%= q.name %></option>
													<% else %>
														<option value="<%= q.id %>"><%= q.name %></option>
													<% end %>
												<% end %>
											</select>
										</div>
										<div class="form-group">
											<label>Department</label>
											<select name="dept" class="form-control" required>
												<%= @departs.each do |d| %>
													<% if @emps.department == d.id %>
														<option value="<%= d.id %>" selected><%= d.name %></option>
													<% else %>
														<option value="<%= d.id %>"><%= d.name %></option>
													<% end %>
												<% end %>
											</select>
										</div>
										<div class="form-group">
											<label>Mobile Number</label>
											<input name="mobile" class="form-control numeric" placeholder="Mobile Number" value="<%= @emps.phone_no %>" maxlength="10" required>
										</div>
										<div class="form-group">
											<label>Date of Birth</label>
											<input type="text" id="date" name="birth" class="form-control" value="<%= @emps.birth_date.strftime('%d-%m-%Y') %>" required>
										</div>
										<div class="form-group">
											<label>Bank Account Number</label>
											<input name="accno" class="form-control numeric" placeholder="Account Number" value="<%= @emps.bank_acc_no %>" required>
										</div>
										<div class="form-group">
											<label>Bank IFSC Code</label>
											<input name="ifsc" class="form-control" placeholder="IFSC Code" style="text-transform:uppercase;" value="<%= @emps.bank_ifsc %>" required>
										</div>
									</div>

									<div style="margin-top:1em;">&emsp;</div>
									<div class="col-md-12">
										<div class="form-group">
											<a href="/emps" class="btn btn-cancel">Cancel</a>
											<input type="submit" name="submit" value="Submit" class="btn btn-app pull-right">
										</div>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>