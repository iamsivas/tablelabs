<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript">
		$(document).ready(function(){
			$('ul.nav li.nav-item.eprof').addClass('active');
		});
	</script>
</head>

<body>
	<div class="main-panel">
		<div class="content">
			<div class="container-fluid">
				<h4 class="page-title">Profile Details</h4>
				<div class="row">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Employees Personal Details</div>
							</div>
							<div class="card-body">
								<div class="col-md-6 pull-left">
									<div class="form-group">
										<label>Door No</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.door_no %>" disabled>
									</div>
									<div class="form-group">
										<label>Street</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.street %>" disabled>
									</div>
									<div class="form-group">
										<label>Village / Hometown</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.village %>" disabled>
									</div>
									<div class="form-group">
										<label>City</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.city %>" disabled>
									</div>
									<div class="form-group">
										<label>Pincode</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.pincode %>" disabled>
									</div>
									<div class="form-group">
										<label>Experience</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.experience %>" disabled>
									</div>
								</div>

								<div class="col-md-6 pull-right">
									<div class="form-group">
										<label>Educational Qualification</label>
										<input type="text" name="door_no" class="form-control" value="<%= @empq %>" disabled>
									</div>
									<div class="form-group">
										<label>Department</label>
										<input type="text" name="door_no" class="form-control" value="<%= @empd %>" disabled>
									</div>
									<div class="form-group">
										<label>Phone Number</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.phone_no %>" disabled>
									</div>
									<div class="form-group">
										<label>Date of Birth</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.birth_date.strftime('%d-%m-%Y') %>" disabled>
									</div>
									<div class="form-group">
										<label>Bank Account Number</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.bank_acc_no %>" disabled>
									</div>
									<div class="form-group">
										<label>Bank IFSC Code</label>
										<input type="text" name="door_no" class="form-control" value="<%= @emp.bank_ifsc %>" disabled>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>